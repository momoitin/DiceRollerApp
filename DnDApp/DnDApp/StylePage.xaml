                    Clicked="NormalTheme_Clicked"/>

            <Button Text="Dark Theme"
                    x:Name="DarkTheme"
                    Clicked="DarkTheme_Clicked"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>